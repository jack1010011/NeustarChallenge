@{
    ViewData["Title"] = "Domain List";
}
<h2>@ViewData["Title"].</h2>


<form class="form-horizontal" action="./ItemsLists/Create">
    <div class="form-group">
        <div>
            <h2><button class="btn btn-default" type="submit">Click here to add domains to your list</button></h2>
        </div>
    </div>
</form>
</br>



@{

    if (ViewData["ItemsList"] != null)
    {
        @Html.Raw(string.Format("<div class=\"col-xs-6 col-sm-4 col-md-4 col-lg-3 col-xxl-2   \"> <h3>Domain's List: </h3>"));

        foreach (ItemsList t in (IEnumerable<ItemsList>)ViewData["ItemsList"])
        {
            @Html.Raw("<ul><li>Name : " + t.Title + "</li></ul>");
          

        }
        @Html.Raw("</br></br></br>");
    }
    else
    { @Html.Raw("<p>Sorry, you have no items </p>");
    }

}


